{
  "manifest_version": 2,

  "name": "Github Release Notifier",
  "short_name": "Release Notifier",
  "description": "Release Notifier for Github",

  "version": "0.0.0",

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "64": "icon-64.png"
    },
    "default_popup": "popup.html",
    "default_title": "Everything is up to date."
  },

  "permissions": [
    "https://*.github.com/*",
    "alarms",
    "identity",
    "storage",
    "notifications"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
